#define DEFAULT 0
#define NUM     1
#define SYM     2
#define FUN     3
#define MOUSE   4
#define SCROLL  5
#define SNIPE   6

#include <behaviors/mouse_keys.dtsi>
#include <dt-bindings/zmk/mouse.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&lt {
    tapping-term-ms = <240>;
    flavor = "balanced";
    quick-tap-ms = <150>;
};

&mt {
    tapping-term-ms = <200>;
    flavor = "tap-preferred";
    quick-tap-ms = <150>;
};

&caps_word { continue-list = <UNDERSCORE MINUS>; };

/ {
    // custom shift using mod-morph 

    behaviors {
        cmqus: comma_question {
            compatible = "zmk,behavior-mod-morph";
            label = "COMMA_QUESTION";
            #binding-cells = <0>;
            bindings = <&kp COMMA>, <&kp QUESTION>;

            mods = <(MOD_LSFT|MOD_RSFT)>;
        };

        dtsmi: dot_semi {
            compatible = "zmk,behavior-mod-morph";
            label = "DOT_SEMI";
            #binding-cells = <0>;
            bindings = <&kp DOT>, <&kp SEMI>;

            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };

    macros {
        Hiragana: Hiragana {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(SPACE)>;
            label = "HIRAGANA";
        };

        univ_pass: univ_pass {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp LS(Z) &kp AMPS &kp I &kp AT &kp N4 &kp LS(T) &kp N &kp N5 &kp TILDE>;
            label = "UNIV_PASS";
        };

        univ_id: univ_id {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp LS(M) &kp N0 &kp LS(A) &kp N2 &kp N5 &kp N1 &kp N1 &kp N6>;
            label = "UNIV_ID";
        };

        univ_mail: univ_mail {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none &kp M &kp N0 &kp A &kp N2 &kp N5 &kp N1 &kp N1 &kp N6 &kp N3 &kp N0 &kp AT &kp E &kp D &kp U &kp DOT &kp T &kp E &kp U &kp DOT &kp A &kp C &kp DOT &kp J &kp P>;
            label = "UNIV_MAIL";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            label = "QWRT";
            bindings = <
&kp Q      &kp W    &kp E     &kp R         &kp T                                    &kp Y          &kp U  &kp I      &kp O    &kp P
&kp A      &kp S    &kp D     &kp F         &kp G                                    &kp H          &kp J  &kp K      &kp L    &kp SEMI
&kp Z      &kp X    &kp C     &kp V         &kp B                                    &kp N          &kp M  &kp COMMA  &kp DOT  &kp RSHFT
&kp LCTRL  &kp TAB  &kp LALT  &lt 6 ESCAPE  &lt 4 SPACE  &lt 5 LA(GRAVE)  &kp ENTER  &kp BACKSPACE                             &lt 2 SLASH
            >;
        };

        empty {
            label = "empty";
            bindings = <
&none  &none  &none  &none  &none                &none  &none  &none  &none  &none
&none  &none  &none  &none  &none                &none  &none  &none  &none  &none
&none  &none  &none  &none  &none                &none  &none  &none  &none  &none
&none  &none  &none  &none  &none  &none  &none  &none                       &none
            >;
        };

        hhkb {
            bindings = <
&kp F1  &kp F2  &kp F3            &kp F4         &kp F5                           &kp F8           &kp F9    &kp F10         &kp F11         &kp F12
&none   &none   &none             &kp PAGE_UP    &kp F6                           &kp F7           &kp HOME  &kp LEFT_ARROW  &kp UP_ARROW    &kp RIGHT
&none   &none   &none             &kp PAGE_DOWN  &kp PRINTSCREEN                  &kp PAUSE_BREAK  &kp END   &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT
&none   &none   &kp LEFT_COMMAND  &trans         &trans           &trans  &trans  &kp DEL                                                    &none
            >;
        };

        empty_2 {
            label = "EMPTY";
            bindings = <
&trans  &trans  &trans  &trans  &bootloader                  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans                       &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans                       &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans       &trans  &trans  &trans                          &trans
            >;
        };

        mouse_layer {
            label = "MOUSE";
            bindings = <
&trans  &trans  &trans  &trans  &trans                  &none   &none      &none      &none      &none
&trans  &trans  &trans  &trans  &trans                  &none   &mkp LCLK  &mkp MCLK  &mkp RCLK  &none
&trans  &trans  &trans  &trans  &trans                  &none   &none      &none      &none      &none
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans                                   &trans
            >;
        };

        scroll_number {
            label = "Scrl Num";
            bindings = <
&kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp NUMBER_5                &kp NUMBER_6  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0
&kp F1        &kp F2        &kp F3        &kp F4        &kp F5                      &kp F8        &kp F9        &kp F10       &kp F11       &kp F12
&none         &none         &none         &none         &kp F6                      &kp F7        &none         &none         &none         &kp PAGE_UP
&none         &none         &none         &none         &none         &none  &none  &none                                                   &kp PAGE_DOWN
            >;
        };

        symbol_snipe {
            label = "Sym Snipe";
            bindings = <
&kp EXCLAMATION  &kp AT_SIGN   &kp HASH      &kp DOLLAR    &kp PERCENT                 &kp CARET       &kp AMPERSAND  &kp ASTERISK      &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&univ_mail       &univ_id      &univ_pass    &none         &none                       &kp MINUS       &kp EQUAL      &kp LEFT_BRACKET  &kp RIGHT_BRACKET     &kp SQT
&bt BT_SEL 0     &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                &kp UNDERSCORE  &kp PLUS       &kp COMMA         &kp PERIOD            &kp NON_US_BACKSLASH
&bt BT_CLR       &none         &none         &none         &none         &none  &none  &none                                                                  &none
            >;
        };
    };
};
